[% META title = 'Exercise List' -%]

<table>
<tr><th>Name</th><th>Description</th><th>Type</th><th>Letters</th><th>Questions</th></tr>
[% FOREACH exercise IN exercises -%]
  [% id = exercise.id %]
  <tr>
    <td>[% exercise.id %]</td>
    <td>[% exercise.description %]</td>
    <td>[% exercise.type %]</td>
    <td>[% letters.$id %]</td>
    <td>[% questions.$id %]</td>
  </tr>
[% END -%]
</table>

<a href="[% Catalyst.uri_for('/play/questionupdate/') %]">Go!</a>
